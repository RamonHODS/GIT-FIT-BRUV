        <button class="update-button">UPDATE!</button>
        <button class="sleep-button">SLEEP, BRUV!</button>
      </div>
    </div>
    {{/each}}
  </section>

  <section class="notes-section">
    <h2 class="notes-title">Recently Added Notes</h2>
    <ul class="notes-list">
      {{#each notes}}
      <li>
        <span class="note-goal">{{ goal }}</span>
        <span class="note-status">{{ status }}</span>
        <p class="note-content">{{ content }}</p>
      </li>
      {{/each}}
    </ul>
  </section>

